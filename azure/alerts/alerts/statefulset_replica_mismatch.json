{
    "name": "statefulset_replica_mismatch",
    "display_name": "StatefulSet Replica Mismatch",
    "combiner": "OR",
    "severity": "CRITICAL",
    "condition": {
      "display_name": "StatefulSet Replica Mismatch Condition",
      "query": "(kube_statefulset_status_replicas_ready{project_id='{{project_id}}', cluster='{{cluster_id}}'}/kube_statefulset_replicas{project_id='{{project_id}}', cluster='{{cluster_id}}'}) < 0.8",
      "duration": "120s",
      "evaluation_interval": "60s",
      "alert_rule": "AlwaysOn",
      "rule_group": "Kubernetes"
    },
    "alert_strategy": {
      "auto_close": "1800s",
      "notification_prompts": ["CLOSED", "OPENED"]
    }
  }