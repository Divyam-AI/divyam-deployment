{
  "name": "deployment_replica_mismatch",
  "display_name": "Deployment Replica Mismatch",
  "combiner": "OR",
  "severity": "CRITICAL",
  "condition": {
    "display_name": "Deployment Replica Mismatch Condition",
    "query": "(kube_deployment_status_replicas_available{project_id='{{project_id}}', cluster='{{cluster_id}}'}/kube_deployment_spec_replicas{project_id='{{project_id}}', cluster='{{cluster_id}}'}) < 0.8",
    "duration": "120s",
    "evaluation_interval": "60s",
    "alert_rule": "AlwaysOn",
    "rule_group": "Kubernetes"
  },
  "alert_strategy": {
    "auto_close": "1800s",
    "notification_prompts": ["CLOSED", "OPENED"]
  }
}
