{
    "name": "pvc_unbound_state",
    "display_name": "PVC Unbound State",
    "combiner": "OR",
    "severity": "CRITICAL",
    "condition": {
      "display_name": "PVC Unbound State Condition",
      "query": "(kube_persistentvolumeclaim_status_phase{phase!='Bound', project_id='{{project_id}}', cluster='{{cluster_id}}'}) > 0",
      "duration": "60s",
      "evaluation_interval": "60s",
      "alert_rule": "AlwaysOn",
      "rule_group": "Kubernetes"
    },
    "alert_strategy": {
      "auto_close": "1800s",
      "notification_prompts": ["CLOSED", "OPENED"]
    }
  }
  